<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res-auto" app:orientation="vertical" app:layout_width="match_parent" app:layout_height="match_parent">
    <android.support.v7.widget.Toolbar app:id="@+id/toolbar" app:background="@drawable/gradient_background" app:subtitleTextColor="0x106000b" app:title="Bulk Delete" app:titleTextColor="0x106000b" style="@style/ToolbarStyle" />
    <android.support.v7.widget.CardView app:background="#ffffff" app:layout_width="match_parent" app:layout_height="wrap_content" app:elevation="5dp">
        <LinearLayout app:orientation="vertical" app:layout_width="match_parent" app:layout_height="wrap_content"
            <LinearLayout app:orientation="horizontal" app:layout_width="match_parent" app:layout_height="match_parent">
                <CheckBox app:textSize="16sp" app:id="@+id/filterUnwatchedOnly" app:padding="5dp" app:layout_width="wrap_content" app:layout_height="wrap_content" app:checked="true" app:text="PTW Only" />
                <CheckBox app:textSize="16sp" app:id="@+id/filterLongTimeNotUpdated" app:padding="5dp" app:layout_width="wrap_content" app:layout_height="wrap_content" app:checked="false" app:text="Long time not updated" />
            </LinearLayout>
            <LinearLayout app:orientation="horizontal" app:layout_width="match_parent" app:layout_height="wrap_content">
                <CheckBox app:textSize="16sp" app:id="@+id/filterSpecial" app:padding="5dp" app:layout_width="wrap_content" app:layout_height="wrap_content" app:checked="false" app:text="Hide specials" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView app:id="@+id/recyclerView" app:layout_width="match_parent" app:layout_height="match_parent" style="@style/RecyclerViewScrollbar" />
</LinearLayout>
