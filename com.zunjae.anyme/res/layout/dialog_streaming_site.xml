<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res-auto" card_view:orientation="vertical" card_view:layout_width="match_parent" card_view:layout_height="match_parent">
    <TextView card_view:text="Select Your Preferred Host" style="@style/DialogTitle" />
    <android.support.v7.widget.CardView card_view:background="#ffffff" card_view:layout_width="match_parent" card_view:layout_height="wrap_content" card_view:elevation="5dp">
        <CheckBox card_view:textSize="16sp" card_view:id="@+id/rememberStreamingApp" card_view:padding="10dp" card_view:layout_width="wrap_content" card_view:layout_height="wrap_content" card_view:checked="false" card_view:text="Remember For All Anime" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView card_view:id="@+id/recyclerView" card_view:padding="7dp" card_view:scrollbars="vertical" card_view:clipToPadding="false" card_view:layout_width="match_parent" card_view:layout_height="match_parent" />
</LinearLayout>
